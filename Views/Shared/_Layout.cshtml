<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - APDP_ASM</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/APDP_ASM.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="d-flex" id="wrapper">
        <!-- Sidebar -->
        <div class="bg-light border-right" id="sidebar">
            <div class="sidebar-heading text-center font-weight-bold text-primary py-4">APDP_ASM</div>
            <div class="list-group list-group-flush">
                <a href="@Url.Action("Index", "Home")" class="list-group-item list-group-item-action bg-light">Dashboard</a>
                <a href="@Url.Action("Admin_Page", "Auth")" class="list-group-item list-group-item-action bg-light">Home</a>
                <a href="@Url.Action("ListUser", "Auth")" class="list-group-item list-group-item-action bg-light">Manage Users</a>
                <a href="@Url.Action("Register", "Auth")" class="list-group-item list-group-item-action bg-light">User Registration</a>
                <a href="@Url.Action("Index", "Course")" class="list-group-item list-group-item-action bg-light">Courses</a>
                <a href="@Url.Action("Logout", "Auth")" class="list-group-item list-group-item-action bg-light">Logout</a>
            </div>
        </div>

        <!-- Page Content -->
        <div id="page-content-wrapper">
            <header>
                <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom box-shadow">
                    <div class="container-fluid">
                        <button class="btn btn-outline-dark" id="menu-toggle">
                            <i class="bi bi-list"></i> Menu
                        </button>
                        <div class="navbar-collapse collapse d-lg-flex justify-content-end">
                            <ul class="navbar-nav">
                                <li class="nav-item">
                                    <a class="nav-link text-dark" href="#">Hello, User</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" href="@Url.Action("Logout", "Auth")">Logout</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </nav>
            </header>

            <div class="container-fluid mt-4">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - APDP_ASM - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        // Toggle the sidebar menu
        $("#menu-toggle").click(function (e) {
            e.preventDefault();
            $("#wrapper").toggleClass("toggled");
        });
    </script>
</body>
</html>
