@{
    ViewBag.Title = "Student's Grades";
    Layout = "~/Views/Shared/_Layout_User.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">Student Information</h3>
        </div>
        <div class="card-body">
            <h4 class="card-title">👨‍🎓 Full Name: <strong>@ViewBag.FirstName @ViewBag.LastName</strong></h4>
            <h4 class="card-title">ID: <strong>@ViewBag.CodeUser</strong></h4>
        </div>
    </div>

    <div class="card mt-4 shadow-sm border-0">
        <div class="card-header bg-success text-white">
            <h4 class="mb-0">📊 Grade Report</h4>
        </div>
        <div class="card-body">
            @if (!string.IsNullOrEmpty(ViewBag.Grades as string))
            {
                <div class="alert alert-info">
                    @Html.Raw(ViewBag.Grades) 
                </div>
               
            }
            else
            {
                <div class="alert alert-warning">
                    No grades found.
                </div>
            }
        </div>
    </div>

    <div class="mt-4">
        <a href="/Auth/Login" class="btn btn-secondary">🔙 Back</a>
        <a href="/Student/ChangePassword" class="btn btn-secondary">Change Password</a>
    </div>
</div>
