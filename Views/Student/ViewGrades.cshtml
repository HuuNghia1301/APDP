@{
    ViewBag.Title = "Điểm của sinh viên";
    Layout = "~/Views/Shared/_Layout_User.cshtml"; // nếu bạn có layout chung
}

<div class="container mt-5">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">Thông tin sinh viên</h3>
        </div>
        <div class="card-body">
            <h4 class="card-title">👨‍🎓 Họ và tên: <strong>@ViewBag.FirstName @ViewBag.LastName</strong></h4>
            <h4 class="card-title">ID  <strong>@ViewBag.CodeUser</strong></h4>
        </div>
    </div>

    <div class="card mt-4 shadow-sm border-0">
        <div class="card-header bg-success text-white">
            <h4 class="mb-0">📊 Bảng điểm</h4>
        </div>
        <div class="card-body">
            @if (!string.IsNullOrEmpty(ViewBag.Grades as string))
            {
                <div class="alert alert-info">
                    @Html.Raw(ViewBag.Grades) 
                </div>
            }
            else
            {
                <div class="alert alert-warning">
                    Không có điểm nào được tìm thấy.
                </div>
            }
        </div>
    </div>

    <div class="mt-4">
        <a href="/Auth/Login" class="btn btn-secondary">🔙 Quay lại</a>
    </div>
</div>
