@model Demo.Models.Grade

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout_Teacher.cshtml";
}


@{
    ViewData["Title"] = "Create Grade";
}

<h1>Create Grade</h1>

<form method="post">
    <div class="form-group">
        <label for="Score">Score</label>
        <input type="number" class="form-control" id="Score" name="Score" step="0.01" required />
    </div>

    <div class="form-group">
        <label for="CodeUserStudent">Student</label>
        <select class="form-control" id="CodeUserStudent" name="CodeUserStudent" required>
            @foreach (var student in (List<Demo.Models.User>)ViewData["Student"])
            {
                <option value="@student.CodeUser">@student.CodeUser</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="CourseName">Course</label>
        <select class="form-control" id="CourseName" name="CourseName" required>
            @foreach (var course in (List<string>)ViewData["CourseName"])
            {
                <option value="@course">@course</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger mt-3">
        <strong>Error:</strong> Please fill in all fields.
    </div>
}


